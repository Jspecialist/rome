---
import BaseIt from "../../layouts/BaseIt.astro";
import { Header } from "../../components/Header.tsx";
import { Hero } from "../../components/Hero.tsx";
import { About } from "../../components/About.tsx";
import { Contact } from "../../components/Contact.tsx";
import { Footer } from "../../components/Footer.tsx";
---

<BaseIt>
  <script>
    import '../../scripts/init-i18n.ts';
  </script>
  <Header client:only="react" />
  <Hero client:only="react" />
  <About client:only="react" />
  <Contact client:only="react" />
  
  <section id="mappa" class="py-10">
    <div class="container mx-auto px-4">
      <div class="relative w-full h-[450px] rounded-xl overflow-hidden shadow-soft">
        <iframe
          src="https://www.google.com/maps?q=8.9761143,-79.5211436&z=17&hl=it&output=embed"
          width="100%"
          height="100%"
          style="border:0;"
          allowfullscreen=""
          loading="lazy"
          referrerpolicy="no-referrer-when-downgrade"
        ></iframe>
      </div>
    </div>
  </section>

  <Footer client:only="react" />
</BaseIt>
